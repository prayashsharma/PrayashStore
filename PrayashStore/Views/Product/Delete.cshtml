@model PrayashStore.ViewModels.ProductDetailViewModel

@{
    ViewBag.Title = "Delete Product";
}

<h3>Are you sure you want to delete this product?</h3>
<br />


<div class="container-fluid col-left-no-padding col-right-no-padding">
    <div class="row">
        <div class="col-md-6 col-xs-12">
            <div class="form-horizontal">
                <div class="col-md-12">
                    <div class="form-group">    
                        <br />              
                    </div>
                </div>
            </div>
            <div class="form-horizontal">
                <div class="form-group">
                    <div class="col-sm-2 ">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", disabled = "disabled" })
                    </div>
                 </div>
            </div>
            <div class="form-horizontal">
                <div class="form-group">
                    <div class="col-sm-2 ">
                        @Html.LabelFor(model => model.Price, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.Price, new { @class = "form-control", disabled = "disabled" })
                    </div>
                </div>
            </div>
            <div class="form-horizontal">
                <div class="form-group">
                    <div class="col-sm-2 ">
                        @Html.LabelFor(model => model.Gender, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.Gender, new { @class = "form-control", disabled = "disabled" })
                    </div>
                </div>
            </div>
            <div class="form-horizontal">
                <div class="form-group">
                    <div class="col-sm-2 ">
                        @Html.LabelFor(model => model.Category, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.Category.Name, new { @class = "form-control", disabled = "disabled" })
                    </div>
                </div>
            </div>
            <div class="form-horizontal">
                <div class="form-group">
                    <div class="col-sm-2 ">
                        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-sm-10">
                        @Html.TextAreaFor(model => model.Description, new { @class = "form-control vertical-resize", disabled = "disabled" })
                    </div>
                </div>
            </div>
        </div>         
        <div class="col-md-4 col-xs-12 col-md-offset-2">
            <div class="row">
                <div class="col-md-12">
                    <div class="img-crop">
                        <img src="@Url.Action("GetProductThumbnail", "Image", new { id = Model.Id })" alt="..." class="img-responsive" />
                    </div>
                </div>
            </div>
        </div>               
    </div>
</div>

@using (Html.BeginForm("Delete", "Product"))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <button type="submit" class="btn btn-danger"><i class="fa fa-trash"></i> Delete</button>
    </div>    
}

<div class="form-group">
    @Html.ActionLink("Cancel and Go Back", "Index")
</div>


